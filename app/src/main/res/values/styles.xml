<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyBottomNavStyle" parent="Widget.Design.BottomNavigationView">
        <!-- Define los atributos para el estilo -->
        <item name="itemIconTint">@color/base_3</item>
        <item name="itemTextColor">@color/base_1</item>
        <item name="android:background">@color/black_soft</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">510dp</item>
    </style>

    <style name="TextViewProfile" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="toogleButtonAlergenos">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:foreground">@drawable/toggle_button_custom_foreground</item>
        <item name="android:foregroundTint">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:paddingRight">16dp</item>0
        <item name="android:textColorHint">@color/black_soft</item>
    </style>

    <style name="FormTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:gravity">center_vertical</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/base_3</item>
        <item name="boxStrokeColor">@color/base_4</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">@color/red</item>
        <item name="hintTextColor">@color/red</item>
    </style>
    
</resources>