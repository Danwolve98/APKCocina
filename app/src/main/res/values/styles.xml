<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyBottomNavStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/base_3</item>
        <item name="itemTextColor">@color/base_1</item>
        <item name="android:background">@color/black_soft</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">510dp</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="itemIconPadding">10dp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="itemTextAppearanceActive">@style/MyBottomNavFont</item>
        <item name="itemTextAppearanceInactive">@style/MyBottomNavFont</item>
    </style>

    <style name="MyBottomNavFont">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseTextAppearance">
        <item name="fontFamily">@font/arial</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ApparenceTextAlergenosItalic">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/arial</item>
    </style>

    <style name="ApparenceTextTitle" parent="BaseTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewProfile" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="toogleButtonAlergenos">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:foreground">@drawable/toggle_button_custom_foreground</item>
        <item name="android:foregroundTint">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColorHint">@color/black_soft</item>
    </style>

    <style name="FormTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:gravity">center_vertical</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/base_6</item>
        <item name="boxStrokeColor">@color/stroke_color_selector_login</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MaterialToggle" parent="MaterialButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:checkable">true</item>
        <item name="toggleCheckedStateOnClick">true</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.circleImageView</item>
    </style>

    <style name="MaterialButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="rippleColor">@color/base_1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/base_6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@animator/animator_button</item>
    </style>

    <style name="MaterialButtonAjustes" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textTop</item>
        <item name="iconSize">60dp</item>
        <item name="android:fontFamily">@font/rasa_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lines">1</item>
        <item name="android:stateListAnimator">@animator/animator_button</item>
    </style>

    <style name="ProfileButtons" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:enabled">true</item>
        <item name="cornerRadius">0dp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="MaterialButtonAlergenos" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="iconPadding">10dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textAppearance">@style/ApparenceTextAlergenosItalic</item>
        <item name="iconSize">35dp</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="layout_flexBasisPercent">50%</item>
    </style>

</resources>