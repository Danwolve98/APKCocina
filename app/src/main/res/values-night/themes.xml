<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.APKCocina" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_1</item>
        <item name="colorPrimaryVariant">@color/base_2</item>
        <item name="colorOnPrimary">@color/base_3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_4</item>
        <item name="colorSecondaryVariant">@color/base_5</item>
        <item name="colorOnSecondary">@color/base_6</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/base_1</item>
        <item name="android:navigationBarColor">@color/black_soft</item>
        <!-- Shadow Intensity -->
        <item name="android:spotShadowAlpha">0.4</item>
        <item name="android:ambientShadowAlpha">0.4</item>
        <!-- Font -->
        <item name="android:fontFamily">@font/karla_camilla</item>
    </style>
</resources>