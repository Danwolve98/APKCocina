<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/base_4"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_3"
            android:layout_marginHorizontal="10dp"
            android:paddingBottom="30dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_nombre_receta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Arroz negro rico de la abuela"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center_horizontal"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="26sp"
                    app:autoSizeMinTextSize="20sp"
                    app:autoSizeStepGranularity="1sp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_detalle"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_nombre_receta"
                    tools:src="@drawable/apkocina_logo"
                    />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/bt_galeria_imagenes"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_detalle"
                    app:layout_constraintEnd_toEndOf="@id/iv_detalle"
                    android:src="@drawable/layers"
                    android:tint="@color/white"
                    android:scaleType="centerCrop"
                    android:alpha="0.7"
                    android:background="@color/black_soft"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_schedule"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/white"
                    android:src="@drawable/baseline_schedule_24"
                    app:layout_constraintTop_toTopOf="@id/iv_detalle"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/iv_detalle"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tiempo_estimado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/iv_schedule"
                    app:layout_constraintStart_toEndOf="@id/iv_schedule"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/iv_schedule"
                    android:layout_marginHorizontal="10dp"
                    tools:text="1h 20mins"
                    android:textSize="18sp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_ingrendientes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/iv_schedule"
                    app:layout_constraintTop_toBottomOf="@id/iv_schedule"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_alergenos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_intro"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:alpha="0.3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:src="@drawable/apkocina_logo"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_descripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rv_alergenos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:hint="@string/lorem_ipsum"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>